
<div class="col-md-6 col-md-offset-3">
  <h2>Регистрация</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true, label: "Имя" %>
      <%= f.input :last_name, required: true, autofocus: true, label: "Фамилия" %>
      <%= f.label :gender, "Пол:" %><br>
      <%= f.radio_button :gender, "Женский" %> <%= f.label :gender, "Женский" %>
      <%= f.radio_button :gender, "Мужской" %> <%= f.label :gender, "Мужской" %>
      <%= f.input :position, required: true, autofocus: true, label: "Должность"%>
      <%= f.input :email, required: true, autofocus: true, label: "Электронная почта"%>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} минимум количиство" if @minimum_password_length), label: "Пароль" %>
      <%= f.input :password_confirmation, required: true, label: "Подтверждение пароля" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Зарегестрироваться" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>