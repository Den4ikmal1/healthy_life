<div class="col-md-6 col-md-offset-3">
  <h2>Редактирование <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :first_name, required: true, label: "Имя", autofocus: true %>
      <%= f.input :last_name, required: true, label: "Фамилия", autofocus: true %>
      <%= f.input :position, required: true, label: "Должность", autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, label: "Новый пароль",autocomplete: "off", hint: "оставьте это поле пустым, если вы не хотите , чтобы изменить его", required: false %>
      <%= f.input :password_confirmation, label: "Подтвердить пароль", required: false %>
      <%= f.input :current_password, hint: "Необходим текущий пароль, чтобы подтвердить изменение", label: "Подтвердить пароль", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Изменить" %>
    </div>
  <% end %>
  

  

  <%= link_to "Назад", :back %>

</div>