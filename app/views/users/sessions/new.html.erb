
<div class="col-md-6 col-md-offset-3">
  <h2>Войдите</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, label: "Електронная почта",autofocus: true %>
      <%= f.input :password, label: "Пароль",required: false %>
      <%= f.input :remember_me,label: "Запомнить", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Войти" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>