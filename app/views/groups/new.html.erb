<%= simple_form_for( @group) do |f|%>
    <%= f.error_notification %>
      <div class="col-md-4">
          <div class="new-point">
            <%= f.input :title %>
          <%= f.simple_fields_for :groups_params do |setting| %>
            <%= setting.input :rufe, label: "Формировать по индексу массы тела", collection: Group::RUFE_INDEX, prompt: "Выберите ваше значение", as: :select %>  
            <%= setting.input :weight, label: "Формировать по индексу Руфье", collection: Group::WEIGHT_INDEX, prompt: "Выберите ваше значение", as: :select %>
        <% end %>
        <%= f.input :coach_id, collection: @coaches, :prompt => "Выберите тренера" %>
          </div><br>
    <div class="group">
      <%= f.button :submit, label: "Создать новую группу", class: "btn btn-success" %>
    </div>
  <% end %>