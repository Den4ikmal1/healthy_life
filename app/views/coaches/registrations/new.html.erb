<div class="col-md-6 col-md-offset-3">
  <h2>Регистрация</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
    <%= f.input :first_name, required: true, label: "Имя", autofocus: true %>
    <%= f.input :last_name, required: true, label: "Фамилия", autofocus: true %>
      <%= f.input :email, required: true, label: "Почта", autofocus: true %>

      <%= f.input :password, required: true, label: "Пароль",hint: ("#{@minimum_password_length} минимум символов" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "Подтверждения пароля",  required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Зарегестрирвать" %>
    </div>
  <% end %>

  <%= render "coaches/shared/links" %>
</div>