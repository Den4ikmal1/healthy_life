<!DOCTYPE html>
<html>
<head>
  <title>HealthyLife</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">

    <div class="container">

      <div class="navbar-header">
        <div class="logo">
          
        </div>
      </div>

      <ul class="nav navbar-nav">
         <%= link_to "sign in as user", new_user_session_path, class: "btn btn-link"  %>
         <%= link_to "sign in as coach", new_coach_session_path, class: "btn btn-link"  %>
      </ul>
      
      <ul class="nav navbar-nav navbar-right">

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Sign up<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <div class="user-panel">
           <% if user_signed_in? %>
              <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-link"  %>
          <% else %>
              <%= link_to "Sign up as user", new_user_registration_path, class: "btn btn-link"  %> 
          <% end %>
           <% if coach_signed_in? %>
              <%= link_to "Sign out", destroy_coach_session_path, :method => :delete, class: "btn btn-link"  %>
          <% else %>
              <%= link_to "Sign up as coach", new_coach_registration_path, class: "btn btn-link"  %> 
          <% end %>
          </div> 
          </ul>
        </li>
        
      </ul>

    </div>

  </nav>
 

<div class="container">  
<%= yield %>
</div>

</body>
</html>
